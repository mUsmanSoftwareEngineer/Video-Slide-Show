<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"

        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/music_unpresed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:gravity="center_horizontal"
        android:text="Select Music to play"
        android:textColor="@color/materialcolorpicker__black"
        android:textSize="@dimen/_18sdp">

    </TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

<!--        <com.shawnlin.numberpicker.NumberPicker-->
<!--            android:id="@+id/usernamespickerdelete"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="200dp"-->
<!--            android:layout_margin="10dp"-->

<!--            android:scrollbarAlwaysDrawVerticalTrack="true"-->
<!--            android:gravity="center"-->

<!--            >-->
<!--        </com.shawnlin.numberpicker.NumberPicker>-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usernamespickerrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"

            >
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/usernamestextdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Mohsin Ejaz"
            android:textSize="25dp"
            android:textColor="@color/materialcolorpicker__black"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:visibility="gone"
            >
        </TextView>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsbackground">

                <TextView
                    android:id="@+id/canceluserdelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="DeleteUserDataDialogueButtons"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsbackground">

                <TextView
                    android:id="@+id/okuserdelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="DeleteUserDataDialogueButtons"
                    android:text="Ok"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>