<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbgcolor"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/adl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/adLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:visibility="visible"
            android:background="@color/ad_background"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:auto_start="false"
                app:duration="1000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading Ad..."
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/adl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/toolbar_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="0.6"
                android:gravity="center">

                <ImageView
                    android:id="@+id/backimg_music"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    app:tint="@color/toptextcolor"
                    android:src="@drawable/btnback" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:gravity="center">


                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="Music"
                    android:textStyle="bold"
                    android:textColor="@color/toptextcolor"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>


            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_weight="0.6"
                android:gravity="center">

                <ImageView
                    android:id="@+id/done_music"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pdone" />
            </RelativeLayout>
        </LinearLayout>


        <AbsoluteLayout
            android:id="@+id/waveformParent"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_margin="20dp"
            android:background="@color/wavebgcolor">

            <ImageView
                android:id="@+id/bkgnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <vcarry.view.WaveformView
                android:id="@+id/waveform"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <vcarry.view.MarkerView
                android:id="@+id/startmarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Start Marker"
                android:nextFocusDown="@+id/endmarker"
                android:paddingLeft="35dp"
                android:src="@drawable/cutter_right" />

            <vcarry.view.MarkerView
                android:id="@+id/endmarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="End Marker"
                android:nextFocusUp="@+id/startmarker"
                android:nextFocusDown="@+id/info"
                android:paddingRight="35dp"
                android:src="@drawable/cutter_left" />
        </AbsoluteLayout>

        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center">

                <EditText
                    android:id="@+id/starttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Start Label"
                    android:gravity="center"
                    android:hint="Start"
                    android:padding="10dp"
                    android:textColor="@color/toptextcolor"
                    android:textColorHint="@color/toptextcolor"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center">


                <ImageView
                    android:id="@+id/rew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:contentDescription="Rewind"
                    android:src="@drawable/sprevius" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center">

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:contentDescription="Play"
                    android:src="@drawable/play" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ffwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:contentDescription="Forward"
                    android:src="@drawable/snext" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center">

                <EditText
                    android:id="@+id/endtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="End Label"
                    android:gravity="center"
                    android:hint="End"
                    android:padding="10dp"
                    android:textColor="@color/toptextcolor"
                    android:textColorHint="@color/toptextcolor"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/bottom_bg_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMusicList"
            android:background="@color/bottom_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <include layout="@layout/ad_banner_lay"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loaderLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/transparent_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true" />
    </LinearLayout>


</RelativeLayout>
