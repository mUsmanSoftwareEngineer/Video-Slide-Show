<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/mainbgcolor"
  >

    <LinearLayout
        android:id="@+id/adl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/adLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:visibility="visible"
            android:background="@color/ad_background"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:auto_start="false"
                app:duration="1000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading Ad..."
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/adl"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/btnback"
            app:tint="@color/toptextcolor" />


        <ImageView
            android:id="@+id/done"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_12sdp"
            android:src="@drawable/pdone"
            app:tint="@color/toptextcolor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Swap Images"
            android:textStyle="bold"
            android:textColor="@color/toptextcolor"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>


    <vaapps.photoslideshow.photovideomaker.gridsupport.AbsDynamicGridView
        android:id="@+id/dynamicGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_margin="@dimen/_10sdp"
        android:layout_above="@+id/banner_container"
        android:verticalSpacing="@dimen/_15sdp"
        android:horizontalSpacing="@dimen/_15sdp"
        android:numColumns="2"/>

    <include layout="@layout/ad_banner_lay"/>
</RelativeLayout>